datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider   = "prisma-client-js"
  output     = "node_modules/.prisma/client"
  engineType = "binary"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Employee {
  id                  String  @id @default(cuid())
  firstName           String  @default("")
  lastName            String  @default("")
  email               String  @unique @default("")
  slug                String  @unique @default("")
  city                String  @default("")
  state               String  @default("")
  country             String  @default("")
  dob                 String  @default("")
  phone               String  @default("")
  photo               String  @default("")
  status              String? @default("remote")
  teams               Team[]  @relation("Employee_teams_many")
  title               Title?  @relation("Employee_title", fields: [titleId], references: [id])
  titleId             String? @map("title")
  from_Team_employees Team[]  @relation("Team_employees_many")

  @@index([titleId])
}

model Team {
  id                  String     @id @default(cuid())
  name                String     @unique @default("")
  employees           Employee[] @relation("Team_employees_many")
  from_Employee_teams Employee[] @relation("Employee_teams_many")
}

model Title {
  id        String     @id @default(cuid())
  name      String     @unique @default("")
  employees Employee[] @relation("Employee_title")
}