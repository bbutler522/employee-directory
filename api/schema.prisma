}

model Employee {
  id         String    @id @default(cuid())
  firstName  String    @default("")
  lastName   String    @default("")
  email      String    @unique @default("")
  slug       String    @unique @default("")
  city       String    @default("")
  state      String    @default("")
  country    String    @default("")
  dob        String    @default("")
  phone      String    @default("")
  photo      String    @default("")
  status     String?   @default("remote")
  teams      Team[]    @relation("Employee_teams_Team_employees")
  jobTitle   JobTitle? @relation("Employee_jobTitle", fields: [jobTitleId], references: [id])
  jobTitleId String?   @map("jobTitle")

  @@index([jobTitleId])
}

model Team {
  id        String     @id @default(cuid())
  name      String     @unique @default("")
  employees Employee[] @relation("Employee_teams_Team_employees")
}

model JobTitle {
  id        String     @id @default(cuid())
  jobTitle  String     @unique @default("")
  employees Employee[] @relation("Employee_jobTitle")
}